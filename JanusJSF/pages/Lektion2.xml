<?xml version="1.0" encoding="UTF-8"?>
<DIALOG   xmlns:xi="http://www.w3.org/2001/XInclude"
	page="Lektion2" title="Initialisieren" pw="XBWK5V6M">

	<STRING name="text1" default="Bereinigt" />
	<STRING name="text2" source="text1" />

	<ACTION name="clear" class="toni.action.Execute" foreach="text1" />

	<GUI>
		<VBOX>
			<TEXTFIELD name="text1" size="10" tooltip="Geben Sie hier etwas ein" />
			<TEXTFIELD name="text2" size="10" tooltip="Text von oben" />
			<BUTTON call="clear" text="Bereinigen"   size="33" />
		</VBOX>
		<DESC>
			Wenn Sie im oberen Textfeld etwas eingeben, und mit Enter bestätigen,
			wird dieser Text in das untere Feld übernommen. Wenn Sie den Schalter
			drücken, wird Bereinigt.		
		</DESC>
	</GUI>
</DIALOG>
